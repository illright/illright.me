---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
---

<style>
  header {
    border-bottom: 1px solid color-mix(in oklab, currentColor, transparent 85%);
    background: transparent;
  }

  nav {
    max-width: 72rem;
    margin: 0 auto;
    padding: 1.25rem 1.25rem;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  h2 {
    margin: 0;
    font-size: 1.25rem;
  }

  h2 a {
    text-decoration: none;
    color: inherit;
  }

  .internal-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .internal-links a {
    text-decoration: none;
    color: inherit;
    opacity: 0.8;
  }

  .internal-links a:hover {
    opacity: 1;
  }
</style>

<header>
  <nav>
    <h2><a href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
    </div>
  </nav>
</header>
