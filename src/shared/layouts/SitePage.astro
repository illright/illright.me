<style>
  body {
    margin: 0;
    background-color: var(--surface-1);
    color: var(--text);
    padding-inline: 1.2rem;
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
  }

  main {
    font-size: var(--font-size-text);
    padding-bottom: 3lh;
    flex: 1;
  }

  header {
    margin-block-start: 0.5rem;
    margin-block-end: 2rem;

    p {
      margin: 0;
      font-weight: bold;
      font-size: 1.3rem;
      text-align: center;
    }

    nav {
      display: flex;
      gap: 1rem;
      justify-content: center;

      a {
        display: inline-flex;
        align-items: center;
        gap: 0.25em;

        &:visited {
          color: var(--link);
        }
      }
    }
  }

  footer {
    padding-block: 0.5rem;

    p {
      margin: 0;
      font-size: 0.8rem;
    }
  }

  :global(.expressive-code):not(:is(aside > *)) {
    margin-inline: calc(-1 * (1.2rem + var(--ec-brdWd)));
  }

  :global(aside) {
    margin-inline: -1.2rem;
    padding-inline: 1.2rem;
  }

  :global(img) {
    width: 100%;
    height: auto;
  }

  @media (width >= 600px) {
    main {
      max-width: 75ch;
      margin-inline: auto;
    }
  }
</style>
